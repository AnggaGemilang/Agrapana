<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddPlantFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:paddingBottom="25dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_75"
                app:cardCornerRadius="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add Plant"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant Type"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                app:popupTheme="@style/Spinner.Custom"
                android:background="@drawable/spinner_style" />

            <CheckBox
                android:id="@+id/automatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="left"
                android:text="Automatic Detection" />

            <CheckBox
                android:id="@+id/new_configuration"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Create New Configuration" />

            <TextView
                android:id="@+id/title_configuration_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuration Name"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/configuration_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:visibility="gone"
                android:background="@drawable/edittext_style"
                android:hint="Enter Configuration Name" />

            <TextView
                android:id="@+id/title_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant Category"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:visibility="gone"
                android:entries="@array/val_plant_category"
                app:popupTheme="@style/Spinner.Custom"
                android:background="@drawable/spinner_style" />

            <LinearLayout
                android:id="@+id/configuration_item_1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Growth Lamp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/growth_lamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:entries="@array/val_component_state"
                        app:popupTheme="@style/Spinner.Custom"
                        android:background="@drawable/spinner_style" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooler System"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/cooler_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:entries="@array/val_component_state"
                        app:popupTheme="@style/Spinner.Custom"
                        android:background="@drawable/spinner_style" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/configuration_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heater System"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/heater_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:entries="@array/val_component_state"
                        app:popupTheme="@style/Spinner.Custom"
                        android:background="@drawable/spinner_style" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fan"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/fan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:entries="@array/val_component_state"
                        app:popupTheme="@style/Spinner.Custom"
                        android:background="@drawable/spinner_style" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingHorizontal="110dp"
                android:textColor="@color/white"
                android:background="@drawable/button_submit"
                android:drawableLeft="@drawable/ic_baseline_library_add_24"
                android:text="Save Plant" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>